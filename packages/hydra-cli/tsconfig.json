{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "strict": true,
    "target": "es2017",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [ "node", "mocha" ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/templates",
    "node_modules"
  ]
}

{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "e2e-test": "yarn workspace hydra-e2e-tests run e2e-test",
    "lint": "yarn workspaces run lint"
  },
  "devDependencies": {
    "eslint": "^7.6.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "2.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn e2e-test"
    }
  },
  "lint-staged": {
    "*.ts": "yarn lint"
  }
}
